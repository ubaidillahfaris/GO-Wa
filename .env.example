# ==============================================
# GO-Wa Environment Configuration
# ==============================================
# Copy this file to .env and update the values

# ----------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------
PORT=3000
ENVIRONMENT=development  # development | production | staging

# ----------------------------------------------
# MONGODB CONFIGURATION
# ----------------------------------------------
# Database credentials
MONGO_USER=root
MONGO_PASS=password

# Database connection
MONGO_HOST=mongo:27017  # Use 'localhost:27017' for local dev, 'mongo:27017' for Docker
MONGO_PORT=27017
MONGO_DB=qr_db

# Alternative: Direct MongoDB URI (overrides above if set)
# MONGO_URI=mongodb://root:password@localhost:27017/qr_db

# ----------------------------------------------
# JWT AUTHENTICATION
# ----------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_MIN=60  # Token expiration in minutes

# ----------------------------------------------
# WHATSAPP CONFIGURATION
# ----------------------------------------------
# Directory paths (relative to app root)
WHATSAPP_STORES_DIR=./stores
WHATSAPP_UPLOADS_DIR=./uploads/whatsapp

# Performance settings
WHATSAPP_MAX_CONCURRENCY=10  # Max concurrent message processing

# ----------------------------------------------
# CORS CONFIGURATION
# ----------------------------------------------
CORS_ALLOWED_ORIGIN=http://localhost:5173  # Frontend URL
CORS_MAX_AGE=43200  # Preflight cache duration in seconds (12 hours)

# ----------------------------------------------
# LOGGING (Optional)
# ----------------------------------------------
# LOG_LEVEL=info  # debug | info | warn | error
# LOG_FORMAT=json  # json | text

# ----------------------------------------------
# SECURITY (Production)
# ----------------------------------------------
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_MAX=100  # Max requests per window
# RATE_LIMIT_WINDOW=60  # Window in seconds

# ----------------------------------------------
# DOCKER-SPECIFIC (for docker-compose)
# ----------------------------------------------
# These are used by docker-compose.yaml
# COMPOSE_PROJECT_NAME=go-wa
